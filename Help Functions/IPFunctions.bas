'Function to check if string is a valid IP address (IPv4 or IPv6)
'Using isIPv4 and isIPv6 functions
Public Function IsIP(ByVal address As String) As Boolean
    IsIP = (IsIPv4(address) Or IsIPv6(address))
End Function

'Function to check if string is an IPv4 address
Public Function IsIPv4(ByVal address As String) As Boolean
    Dim number                          As Integer
    Dim numbers()                       As String
    Dim strNumber                       As Variant
    
    On Error GoTo notANumber
    
    numbers = Split(address, ".")
    
    If (UBound(numbers) = 3) Then
        IsIPv4 = True
        
        For Each strNumber In numbers
            number = CInt(strNumber)
            
            If ((Len(strNumber) > 3) Or (number < 0) Or (number > 255)) Then
                IsIPv4 = False
                Exit Function
            End If
        Next strNumber
        
        Exit Function
    End If
    
notANumber:
    IsIPv4 = False
End Function

